{% extends 'base.html.twig' %}

{% block title %}Produktfinder - Home{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <h1 class="mb-4">Elektronik-Produktfinder</h1>
            <p class="lead mb-5">Finden Sie das perfekte Elektronikprodukt mit Hilfe von künstlicher Intelligenz. Beschreiben Sie einfach, was Sie suchen, und unser System findet die passenden Produkte für Sie.</p>
            
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <h2 class="mb-4">Wie kann ich Ihnen helfen?</h2>
                    <p>Beschreiben Sie Ihre Anforderungen in natürlicher Sprache:</p>
                    
                    <div class="chat-container mb-4">
                        <div id="chat-messages" class="chat-messages mb-3">
                            <!-- Chat messages will appear here -->
                        </div>
                        
                        <div class="input-group">
                            <input type="text" id="user-input" class="form-control" placeholder="z.B. Ich suche ein wasserdichtes Smartphone mit guter Kamera...">
                            <button class="btn btn-primary" id="send-button">Suchen</button>
                        </div>
                        <div class="input-group mt-2">
                            <input type="file" id="image-upload" class="form-control" accept="image/*">
                            <button class="btn btn-secondary" id="upload-image-button">Bild hochladen & Suchen</button>
                        </div>
                        <div id="image-preview-container" class="mt-2" style="display: none;">
                            <img id="image-preview" src="#" alt="Vorschau" style="max-width: 100px; max-height: 100px;"/>
                            <button id="clear-image-preview" class="btn btn-sm btn-danger ms-2">Entfernen</button>
                        </div>
                    </div>
                    
                    <div id="results-container" class="mt-4" style="display: none;">
                        <h3>Gefundene Produkte</h3>
                        <div id="product-results" class="row">
                            <!-- Product results will appear here -->
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-5">
                <h3>Wie funktioniert es?</h3>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">1. Beschreiben</h5>
                                <p class="card-text">Beschreiben Sie Ihre Wünsche in natürlicher Sprache.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">2. KI-Analyse</h5>
                                <p class="card-text">Unsere KI analysiert Ihre Anfrage und findet passende Produkte.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">3. Ergebnisse</h5>
                                <p class="card-text">Entdecken Sie die für Sie passenden Produkte.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const chatMessages = document.getElementById('chat-messages');
        const userInput = document.getElementById('user-input');
        const sendButton = document.getElementById('send-button');
        const imageUpload = document.getElementById('image-upload');
        const uploadImageButton = document.getElementById('upload-image-button');
        const imagePreviewContainer = document.getElementById('image-preview-container');
        const imagePreview = document.getElementById('image-preview');
        const clearImagePreviewButton = document.getElementById('clear-image-preview');
        const resultsContainer = document.getElementById('results-container');
        const productResults = document.getElementById('product-results');
        
        let currentImageFile = null;

        imageUpload.addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                currentImageFile = file;
                imagePreview.src = URL.createObjectURL(file);
                imagePreviewContainer.style.display = 'block';
            }
        });

        clearImagePreviewButton.addEventListener('click', function() {
            currentImageFile = null;
            imageUpload.value = ''; // Reset file input
            imagePreview.src = '#';
            imagePreviewContainer.style.display = 'none';
        });

        function addMessage(content, isUser = false, isHtml = false) {
            const messageDiv = document.createElement('div');
            messageDiv.className = isUser ? 'message user-message' : 'message system-message';
            if (isHtml) {
                messageDiv.innerHTML = content;
            } else {
                messageDiv.innerHTML = `<p>${content}</p>`;
            }
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
        
        function searchProducts(query) {
            addMessage('Suche nach passenden Produkten...', false);
            
            fetch('/api/products/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ message: query })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    addMessage(data.response, false);
                    if (data.products && data.products.length > 0) {
                        displayProducts(data.products, data.uploadedImageUrl, data.imageDescription);
                    }
                } else {
                    addMessage(data.message || 'Es ist ein Fehler aufgetreten. Bitte versuchen Sie es erneut.', false);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                addMessage('Es ist ein Fehler aufgetreten. Bitte versuchen Sie es erneut.', false);
            });
        }

        function searchProductsWithImage(imageFile, query) {
            const formData = new FormData();
            formData.append('image', imageFile);
            if (query) {
                formData.append('message', query);
            }

            let userMessageContent = '';
            if (query) {
                userMessageContent += `<p>${query}</p>`;
            }
            userMessageContent += `<img src="${URL.createObjectURL(imageFile)}" alt="Uploaded Image" style="max-height: 100px; border-radius: 5px; margin-top: 5px;">`;
            addMessage(userMessageContent, true, true);
            addMessage('Analysiere Bild und suche nach passenden Produkten...', false);

            fetch('/api/products/chat_with_image', { // New endpoint
                method: 'POST',
                body: formData // No 'Content-Type' header, browser sets it for FormData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    addMessage(data.response, false);
                     if (data.imageDescription) {
                        addMessage(`<em>Bildbeschreibung: ${data.imageDescription}</em>`, false, true);
                    }
                    if (data.products && data.products.length > 0) {
                        displayProducts(data.products, data.uploadedImageUrl, data.imageDescription);
                    }
                } else {
                    addMessage(data.message || 'Es ist ein Fehler aufgetreten. Bitte versuchen Sie es erneut.', false);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                addMessage('Es ist ein Fehler aufgetreten. Bitte versuchen Sie es erneut.', false);
            })
            .finally(() => {
                // Clear preview and file input after processing
                clearImagePreviewButton.click();
            });
        }
        
        function displayProducts(products, uploadedImageUrl = null, imageDescription = null) {
            productResults.innerHTML = ''; // Clear previous results

            // Optionally display the uploaded image and its description above products
            if (uploadedImageUrl) {
                const imageInfoDiv = document.createElement('div');
                imageInfoDiv.className = 'col-12 mb-3';
                let imageHtml = `<h4 class="mb-2">Basis für Suche:</h4><img src="${uploadedImageUrl}" alt="Hochgeladenes Bild" style="max-width: 150px; max-height: 150px; border-radius: 8px; margin-bottom: 10px;">`;
                if (imageDescription) {
                    imageHtml += `<p class="text-muted"><em>KI-generierte Beschreibung: ${imageDescription}</em></p>`;
                }
                imageInfoDiv.innerHTML = imageHtml;
                productResults.appendChild(imageInfoDiv);
            }
            
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'col-md-6 mb-4';
                
                const productName = product.title || 'Unbekanntes Produkt';
                const productId = product.primary_key || 'N/A';
                const score = product.distance ? (product.distance * 100).toFixed(1) + '%' : 'N/A';
                
                productCard.innerHTML = `
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">${productName}</h5>
                            <p class="card-text">Produkt-ID: ${productId}</p>
                            <p class="card-text"><small class="text-muted">Relevanz: ${score}</small></p>
                        </div>
                    </div>
                `;
                
                productResults.appendChild(productCard);
            });
            
            resultsContainer.style.display = 'block';
        }
        
        // Event listeners
        sendButton.addEventListener('click', function() {
            const query = userInput.value.trim();
            if (query) {
                addMessage(query, true);
                searchProducts(query);
                userInput.value = '';
            }
        });
        
        userInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const query = userInput.value.trim();
                if (query) {
                    addMessage(query, true);
                    searchProducts(query);
                    userInput.value = '';
                }
            }
        });

        uploadImageButton.addEventListener('click', function() {
            const query = userInput.value.trim(); // Optional text query
            if (currentImageFile) {
                searchProductsWithImage(currentImageFile, query);
                userInput.value = ''; // Clear text input
                // imageUpload.value = ''; // Done by clearImagePreviewButton.click() in finally block
                // currentImageFile = null; // Done by clearImagePreviewButton.click()
                // imagePreviewContainer.style.display = 'none'; // Done by clearImagePreviewButton.click()
            } else {
                addMessage('Bitte wählen Sie zuerst ein Bild aus.', false);
            }
        });
        
        // Initial message
        addMessage('Hallo! Wie kann ich Ihnen bei der Suche nach Elektronikprodukten helfen?', false);
    });
</script>
<style>
    .chat-container {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
    }
    
    .chat-messages {
        height: 300px;
        overflow-y: auto;
        padding: 15px;
        background-color: #f8f9fa;
    }
    
    .message {
        margin-bottom: 15px;
        padding: 10px 15px;
        border-radius: 18px;
        max-width: 80%;
        clear: both;
    }
    
    .user-message {
        background-color: #007bff;
        color: white;
        float: right;
    }
    
    .system-message {
        background-color: #e9ecef;
        color: #212529;
        float: left;
    }
    
    .message p {
        margin: 0;
    }
</style>
{% endblock %}
